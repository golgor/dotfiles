// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "context_servers": {
    "mcp-server-github": {
      "enabled": true,
      "remote": false,
      "settings": {
        "github_personal_access_token": "{{ (bitwardenFields "item" "github.com").MCP_PAT.value }}"
      }
    }
  },
  "prettier": {
    "allowed": true
  },
  "use_system_window_tabs": false,
  "tabs": {
    "file_icons": true,
    "git_status": false
  },
  "title_bar": {
    "show_menus": false,
    "show_branch_icon": true
  },
  "debugger": {
    "button": true
  },
  "terminal": {
    "copy_on_select": true
  },
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5-thinking"
    },
    "model_parameters": []
  },
  "minimap": {
    "show": "auto"
  },
  "languages": {
    "Python": {
      "preferred_line_length": 120,
      "language_servers": [
        // Disable basedpyright and enable ty, and otherwise
        // use the default configuration.
        "ty",
        "!basedpyright"
      ]
    }
  },
  "vim_mode": false,
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  }
}

